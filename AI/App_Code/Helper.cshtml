@helper PostImg(string imgName, bool nsfw) {
    if (!nsfw)
    {
        <img src="@(System.Configuration.ConfigurationManager.AppSettings["postImgsPath"] + imgName)"  
         onerror="this.src='@System.Configuration.ConfigurationManager.AppSettings["img404Path"]'" 
             class="postImg" />
    }
    else
    {
        <img src="@System.Configuration.ConfigurationManager.AppSettings["NSFW"]"
             onerror="this.src='@System.Configuration.ConfigurationManager.AppSettings["img404Path"]'"
             class="postImg" />
    }
}

