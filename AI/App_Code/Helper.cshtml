@helper PostImg(SI.Models.Post post) {
    <img src="@(System.Configuration.ConfigurationManager.AppSettings["postImgsPath"] + post.ImgName)" 
         alt="@post.Title" 
         onerror="this.src='@System.Configuration.ConfigurationManager.AppSettings["img404Path"]'" 
         class="postImg" />
}

@helper PostImgSmall(SI.Models.Post post)
{
    <img src="@(System.Configuration.ConfigurationManager.AppSettings["postImgsPath"] + post.ImgName)" 
         alt="@post.Title" 
         onerror="this.src='@System.Configuration.ConfigurationManager.AppSettings["img404Path"]'" 
         class="postImgSmall" />
}

@SI.Properties.Settings.Default.PostImgPath
