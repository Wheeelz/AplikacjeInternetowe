@model SI.Models.Post

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <h4>@Model.Title</h4>
    @Helper.PostImgSmall(Model)
    @using (Html.BeginForm()) {
